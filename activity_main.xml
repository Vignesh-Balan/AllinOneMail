<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/proton_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/protonmail_icon"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/gmail_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zoho_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/zoho_icon"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/proton_button"
        app:layout_constraintStart_toEndOf="@+id/proton_button" />

    <Button
        android:id="@+id/yahoo_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/yahoo_icon"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/zoho_button"
        app:layout_constraintStart_toEndOf="@+id/zoho_button" />

    <Button
        android:id="@+id/outlook_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/outlook_icon"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmail_button" />

    <Button
        android:id="@+id/gmail_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:background="@drawable/gmail_icons"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/proton_button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:layout_marginStart="52dp"
        android:text="gmail"
        android:textAlignment="center"
        android:textColor="#032642"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:layout_marginStart="52dp"
        android:text="outlook"
        android:textAlignment="textStart"
        android:textColor="#032642"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlook_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:text="proton mail"
        android:textAlignment="center"
        android:textColor="#032642"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/proton_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:text="zoho mail"
        android:textAlignment="center"
        android:textColor="#032642"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="45dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:text="yahoo mail"
        android:textAlignment="center"
        android:textColor="#032642"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>